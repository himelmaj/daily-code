---
type Props = {
    className?: string;
    width?: string;
    height?: string;
    strokeWidth?: string;
    color?: string;
};

const { 
    className, 
    width = "24", 
    height = "24",
    strokeWidth = "1.5",
    color = "currentColor"
} = Astro.props;
---

<svg 
    xmlns="http://www.w3.org/2000/svg" 
    fill="none" 
    viewBox="0 0 24 24" 
    stroke-width={strokeWidth} 
    stroke={color}
    width={width}
    height={height}
    class={className}
>
    <path 
        stroke-linecap="round" 
        stroke-linejoin="round" 
        d="M10.5 19.5 3 12m0 0 7.5-7.5M3 12h18" 
    />
</svg>