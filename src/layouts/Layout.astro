---
import "../styles/global.css";
import "@fontsource/pirata-one";
import "@fontsource/geist-sans";
import { ClientRouter } from "astro:transitions";
import Footer from "../components/Footer.astro";
import SiteSeo from "@/components/SiteSeo.astro";

interface Props {
  title?: string;
  description?: string;
}

const {
  title = "Daily Code",
  description = "DailyCode es una forma de practicar lógica de programación.",
} = Astro.props;
---

<!doctype html>
<html lang="en" class="dark">
  <head>
    <ClientRouter />
    <SiteSeo title={title} description={description}/>
  </head>
  <body class="min-h-screen bg-neutral-950 text-white opacity-80">
    <div class="w-full mx-auto container lg:max-w-4xl md:max-w-3xl flex flex-col justify-center min-h-screen px-6 sm:px-10 lg:px-10 no-scrollbar" >
      <main class="flex-1 flex-col flex no-scrollbar border-zinc-800 border-x">
        <slot />
      </main>
      <Footer />
    </div>
  </body>
</html>
