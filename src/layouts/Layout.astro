---
import "../styles/global.css";
import "@fontsource/pirata-one";
import "@fontsource/geist-sans";
import { ClientRouter } from "astro:transitions";
// import Image from "astro/components/Image.astro";
// import MakiImage from "/images/maki.png";

interface Props {
  title?: string;
}

const { title = "Daily Code" } = Astro.props;
---

<!doctype html>
<html lang="en" class="dark">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <ClientRouter />
    <title>{title}</title>
  </head>
  <body class="min-h-screen bg-neutral-950 text-white opacity-80">
    <div class="w-full mx-auto container lg:max-w-4xl md:max-w-3xl flex flex-col justify-center min-h-screen px-6  sm:px-10 lg:px-10 no-scrollbar">
      <main class="flex-1 flex-col flex no-scrollbar border-zinc-800 border-x">
        <slot />
      </main>
    </div>
  </body>
</html>
